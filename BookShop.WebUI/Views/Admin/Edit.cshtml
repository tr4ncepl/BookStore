@model BookShop.WebUI.Models.TestView


<div class="panel">
    <div class="panel-heading">
        @if (Model.Title == null)
        {
        <h3>Dodawanie nowej książki</h3>
        }
            else
            {
            <h3>Edycja @Model.Title</h3>
            }
    </div>

    @using (Html.BeginForm("Edit", "Admin",
 FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
<div class="panel-body">

    @Html.HiddenFor(m => m.BookID)
    @Html.HiddenFor(m => m.ImageData)
    @Html.HiddenFor(m => m.ImageMimeType)
    @foreach (var property in ViewData.ModelMetadata.Properties)
    {
        switch (property.PropertyName)
        {
            case "BookID":
            case "ImageData":
            case "ImageMimeType":
            case "SelectedItemIds":
            case "SelectedAuthors":
            case "Books":
            case "AvailableItems":
            case "AvailableAuthors":
            case "SelectedGenres":
            case "AvailableGenres":


                break;
            default:
    <div class="form-group">
        <label>@(property.DisplayName ?? property.PropertyName)</label>
        @if (property.PropertyName == "Description")
        {
            @Html.TextArea(property.PropertyName, null, new { @class = "form-control",rows=5 })
        }
        else
        {
            @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
        }

        @Html.ValidationMessage(property.PropertyName)
    </div>
                break;
        }
    }
    <label>Wydawnictwo</label>
    <div class="form-inline">
        @Html.ListBoxFor(m => m.SelectedItemIds,
    new MultiSelectList(Model.AvailableItems, "PublisherId", "PublisherName"))
    </div>
    <label>Autor</label>
    <div class="form-group">
        @Html.ListBoxFor(m => m.SelectedAuthors,
        new MultiSelectList(Model.AvailableAuthors, "AuthorId", "AuthorName"))
    </div>
    <label>Gatunek</label>
    <div class="form-group">
        @Html.ListBoxFor(m => m.SelectedGenres,
        new MultiSelectList(Model.AvailableGenres, "GenreId", "GenreName"))
    </div>


    <div class="form-group">
        <div style="position:relative;">
            <label>Zdjęcie</label>
            <a class='btn' href='javascript:;'>
                Wybierz plik...
                <input type="file" name="Image" size="40"
                       style="position:absolute;z-index:2;top:0;
 left:0;filter: alpha(opacity=0); opacity:0;
 background-color:transparent;color:transparent;"
                       onchange='$("#upload-file-info").html($(this).val());'>
            </a>
            <span class='label label-info' id="upload-file-info"></span>
        </div>
        @if (Model.ImageData == null)
        {
            <div class="form-control-static">Brak zdjęcia</div>
        }
        else
        {
            <img class="img-thumbnail" width="150" height="150"
                 src="@Url.Action("GetImage", "Book",
 new { Model.BookID })" />
        }
    </div>
</div>


        <div class="panel-footer">
            <input type="submit" value="Zapisz" class="btn btn-primary" />
            @Html.ActionLink("Anuluj i wróć do listy", "Index", null, new
            {
                @class = "btn btn-default"
            })
        </div>
    }
</div>

@{
    ViewBag.Title = "Administracja: edycja " + @Model.Title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
















