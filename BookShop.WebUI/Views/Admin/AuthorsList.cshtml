@model IEnumerable<BookShop.Domain.Entities.Author>


@{
    ViewBag.Title = "Panel administracyjny: Wszyscy Autorzy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Wszyscy autorzy</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Imie, Nazwisko</th>
                <th>Biografia</th>
                <th>Akcje</th>
                
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AuthorId</td>
                    <td>@Html.ActionLink(item.AuthorName, "EditAuthor", new { item.AuthorId })</td>
                    <td>@item.AuthorDesc</td>     
                    <td>
                        @using (Html.BeginForm("DeleteAuthor", "Admin"))
                        {
                            @Html.Hidden("AuthorId", item.AuthorId)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Dodaj autora", "NewAuthor", null, new { @class = "btn btn-default" })
    </div>


</div>