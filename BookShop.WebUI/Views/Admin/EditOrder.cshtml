@model BookShop.Domain.Entities.Order

<div class="panel">
    <div class="panel-heading">
        <h3>Edycja Zamówienia nr: @Model.OrderId</h3>
    </div>
    @using (Html.BeginForm())
    {
        <div class="panel-body">
            @Html.HiddenFor(m => m.OrderId)
            @foreach (var property in ViewData.ModelMetadata.Properties)
            {
                switch (property.PropertyName)
                {
                    case "OrderId":
                    case "BookOrders":
                        break;
                    default:
                        <div class="form-group">
                            <label>@(property.DisplayName ?? property.PropertyName)</label>
                            @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                            @Html.ValidationMessage(property.PropertyName)

                        </div>
                        break;
                }
            }



        </div>

        <div class="panel-footer">
            <input type="submit" value="Zapisz" class="btn btn-primary" />
            @Html.ActionLink("Anuluj i wróć do listy", "OrderList", null, new { @class = "btn btn-default" })
        </div>
    }

</div>

@{ 
    ViewBag.Title = "Edycja zamówienia nr: " + Model.OrderId;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}