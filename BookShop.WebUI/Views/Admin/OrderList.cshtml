@model IEnumerable<BookShop.Domain.Entities.Order>

@{ 
    ViewBag.Title = "Lista zamówień";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Lista zamówień</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Kupujący</th>
                <th>Adres</th>
                <th>Cena</th>
                <th>Akcje</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderId</td>
                    <td>@item.RecName</td>
                    <td>@item.RecAdress</td>
                    <td class="NumericCol">@item.TotalValue.ToString("c")</td>
                    <td>@Html.ActionLink("Edycja", "EditOrder", new { item.OrderId }) | 
                    @Html.ActionLink("Szczegóły", "OrderDetails", new { @class = "btn btn-default" , item.OrderId }) |
                    @Html.ActionLink("Usuń", "DeleteOrder", new {item.OrderId})
                    
                        </td> 
                    

                </tr>
            }
        </table>
    </div>
</div>

