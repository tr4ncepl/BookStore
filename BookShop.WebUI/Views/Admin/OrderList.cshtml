@model IEnumerable<BookShop.Domain.Entities.Order>

@{ 
    ViewBag.Title = "Lista zamówień";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="panel panel-heading">
    <div class="panel-heading">
        <h3>Lista zamówień</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Kupujący</th>
                <th>Adres</th>
                <th>Cena</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderId</td>
                    <td>@Html.ActionLink(item.RecName, "EditOrder", new { item.OrderId })</td>
                    <td>@item.RecAdress</td>
                    <td class="NumericCol">@item.TotalValue.ToString("c")</td>
                </tr>
            }
        </table>
    </div>
</div>

