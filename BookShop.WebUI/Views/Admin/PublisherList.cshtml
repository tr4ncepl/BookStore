@model IEnumerable<BookShop.Domain.Entities.Publisher>


@{
    ViewBag.Title = "Panel administracyjny: Wszyscy Autorzy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Wszystkie książki</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Akcje</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PublisherId</td>
                    <td>@Html.ActionLink(item.PublisherName, "EditPublisher", new { item.PublisherId })</td>
                    <td>@item.PublisherDesc</td>
                    <td>
                        @using(Html.BeginForm("DeletePublisher","Admin"))
                {
                    @Html.Hidden("PublisherId",item.PublisherId)
                            <input type="submit" value="Usuń" />
                }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Dodaj wydawnictwo", "NewPublisher", null, new { @class = "btn btn-default" })
    </div>


</div>