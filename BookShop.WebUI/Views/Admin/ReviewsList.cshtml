@model IQueryable<BookShop.Domain.Entities.BookReview>

@{ 
    ViewBag.Title = "Lista recenzji";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Lista recenzji</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Tytuł książki</th>
                <th>Autor</th>
                <th>Treść Recenzji</th>
                <th>Ocena</th>
                <th>Data</th>
                <th>Akcje</th>
            </tr>

            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.BookReviewId</td>
                    <td>@item.Book.Title</td>
                    <td>@item.ReviewAuthor</td>
                    <td>@item.ReviewDesc</td>
                    <td>@item.BookRating</td>
                    <td>@item.PublicationDate</td>
                    <td>
                        @using (Html.BeginForm("DeleteReview", "Admin"))
                        {
                            @Html.Hidden("reviewId", item.BookReviewId)
                            <input type="submit" class="btn btn-danger btn-xs" value="Usuń" />
                        }
                                    </td>
                </tr>
            }
        </table>
    </div>
</div>