@model IEnumerable<string>

@{
    ViewBag.Title = "Error";

}

<div class="alrt alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Coś poszło nie tak. Proszę spróbuj ponownie
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Wystąpiły następujące błędy:
            <ul>
                @foreach(string error in Model)
                    {
                        <li>@error</li>
                    }
            </ul>
            break;
    }
</div>

@Html.ActionLink("OK","Index",null,new {@class="btn btn-default"})

